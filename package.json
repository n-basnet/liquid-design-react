{
  "name": "@netguru-team-m/liquid-design-react",
  "version": "1.4.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "scripts": {
    "test": "cross-env CI=1 jest --coverage --collectCoverageFrom=src/**/*.js --collectCoverageFrom=!src/*.js",
    "test:watch": "jest --watch",
    "test:loki": "npm run storybook:build-loki && loki --requireReference --reactUri file:./out --verboseRenderer",
    "test:loki:approve": "loki approve",
    "test:loki:update": "npm run storybook:build-loki && loki update --requireReference --reactUri file:./out",
    "build": "BABEL_ENV=main rollup -c",
    "start": "BABEL_ENV=main rollup -c -w",
    "prepare": "yarn run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cm": "git-cz",
    "lint": "eslint ./src ./storybook ./scripts",
    "format": "prettier-standard",
    "add-component": "node scripts/addComponent.js",
    "prepare-svgs": "node scripts/prepareSVGs.js",
    "storybook:start": "BABEL_ENV=main start-storybook -p 9001 -c storybook",
    "storybook:build": "BABEL_ENV=main build-storybook -c storybook -o out",
    "storybook:build-loki": "STORYBOOK_LOKI_BUILD=1 npm run storybook:build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "animate.css": "^3.6.1",
    "polished": "^1.9.2",
    "ramda": "^0.25.0",
    "react-animated-transitions": "^0.0.6",
    "react-click-outside": "^3.0.1",
    "react-modal": "^3.5.1",
    "react-transition-group": "^2.4.0",
    "styled-components": "^3.3.3",
    "uniqid": "^5.0.3"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.1",
    "@storybook/addon-actions": "^4.0.0-alpha.12",
    "@storybook/addon-info": "^4.0.0-alpha.12",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/react": "^4.0.0-alpha.12",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.2.0",
    "babel-plugin-add-react-displayname": "^0.0.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-ramda": "^1.6.1",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "camelcase": "^5.0.0",
    "commitizen": "^2.10.1",
    "condition-circle": "^2.0.1",
    "conventional-changelog-cli": "^2.0.1",
    "cross-env": "^5.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "fast-lorem-ipsum": "^1.2.0",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "husky": "^1.0.0-rc.13",
    "inquirer": "^6.0.0",
    "jest-cli": "^23.2.0",
    "lint-staged": "^7.2.0",
    "loki": "^0.13.0",
    "object-assign": "^4.1.1",
    "prettier-standard": "^8.0.1",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-svg-loader": "^2.1.0",
    "rollup": "^0.54.0",
    "rollup-plugin-auto-external": "^1.2.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.0.0",
    "rollup-plugin-react-svg": "^2.1.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-url": "^1.4.0",
    "semantic-release": "^15.9.8",
    "svgo": "^1.0.5"
  },
  "release": {
    "branch": "production",
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|woff|woff2)$": "<rootDir>/src/moduleMocks/empty.js",
      "\\.(svg)$": "<rootDir>/src/moduleMocks/svg.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "loki": {
    "chromeSelector": "#storybook-main-element",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1200,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netguru/Merck-React.git"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "prettier": {
    "printWidth": 100
  }
}
